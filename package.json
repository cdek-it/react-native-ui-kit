{
  "name": "react-native-prime-ui-kit",
  "version": "0.0.51",
  "description": "UI kit на основе Prime Faces, Prime Flex для React Native",
  "homepage": "https://github.com/cdek-it/react-native-prime-ui-kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/cdek-it/react-native-prime-ui-kit.git"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "test": "jest",
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios --no-install",
    "storybook-generate": "sb-rn-get-stories --config-path .storybook && sed -i -e 's/export const view = global.view/export const view: ReturnType<typeof start> = global.view/' .storybook/storybook.requires.ts && prettier .storybook --write",
    "doctor": "expo-doctor",
    "check": "expo install --check",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "prettier:watch": "onchange . -- prettier --write --ignore-unknown \"{{changed}}\""
  },
  "devDependencies": {
    "@babel/core": "7.26.7",
    "@babel/preset-env": "7.26.7",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.22.0",
    "@expo/metro-runtime": "4.0.1",
    "@gorhom/bottom-sheet": "5.0.6",
    "@gorhom/portal": "1.0.14",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/datetimepicker": "8.2.0",
    "@react-native-community/slider": "4.5.5",
    "@storybook/addon-actions": "8.3.5",
    "@storybook/addon-controls": "8.3.5",
    "@storybook/addon-ondevice-actions": "8.3.5",
    "@storybook/addon-ondevice-controls": "8.3.5",
    "@storybook/addon-ondevice-notes": "8.3.5",
    "@storybook/core": "8.3.5",
    "@storybook/preview-api": "8.3.5",
    "@storybook/react": "8.3.5",
    "@storybook/react-native": "8.3.5",
    "@storybook/test": "8.3.5",
    "@tabler/icons-react-native": "3.29.0",
    "@testing-library/react-native": "13.0.1",
    "@types/jest": "29.5.13",
    "@types/react": "18.3.12",
    "babel-loader": "8.2.3",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.22.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-native": "4.1.0",
    "expo": "52.0.28",
    "expo-application": "6.0.2",
    "expo-constants": "17.0.5",
    "expo-doctor": "1.12.5",
    "expo-status-bar": "2.0.1",
    "jest": "29.7.0",
    "jest-expo": "52.0.3",
    "jest-extended": "4.0.2",
    "jest-junit": "16.0.0",
    "jiti": "2.4.2",
    "lefthook": "1.10.10",
    "npm-check-updates": "17.1.16",
    "onchange": "7.1.0",
    "prettier": "3.5.3",
    "react": "18.3.1",
    "react-native": "0.77.0",
    "react-native-advanced-input-mask": "1.2.3",
    "react-native-gesture-handler": "2.22.1",
    "react-native-reanimated": "patch:react-native-reanimated@npm%3A3.16.7#~/.yarn/patches/react-native-reanimated-npm-3.16.7-1e7cd6d376.patch",
    "react-native-safe-area-context": "5.1.0",
    "react-native-svg": "15.11.1",
    "react-test-renderer": "18.3.1",
    "standard-version": "9.5.0",
    "storybook": "8.3.5",
    "ts-node": "10.9.2",
    "typescript": "5.8.2",
    "typescript-eslint": "8.27.0"
  },
  "peerDependencies": {
    "@gorhom/portal": "1.0.14",
    "@tabler/icons-react-native": ">=3.x",
    "expo-application": ">=6.x",
    "react": ">=18.x",
    "react-native": ">=0.77.x",
    "react-native-reanimated": ">=3.15.x",
    "react-native-svg": ">=15.11.x"
  },
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": "20"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native@~0.76.6",
        "react-native-reanimated@~3.16.1",
        "react-native-gesture-handler@~2.20.0",
        "react-native-screens@~4.4.0",
        "react-native-safe-area-context@~4.12.0",
        "react-native-webview@~13.12.5",
        "react-native-svg@~15.8.0"
      ]
    },
    "doctor": {
      "appConfigFieldsNotSyncedCheck": {
        "enabled": false
      },
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@tabler/icons-react-native",
          "eslint-config-expo"
        ]
      }
    }
  }
}
